{
    "name": "relia-prompt",
    "version": "1.0.0",
    "description": "Tool for testing llm prompts against multiple LLMs and improving them.",
    "main": "dist/server.js",
    "scripts": {
        "build": "bun run build:frontend && bun build ./src/server.ts --outdir ./dist --target node --format cjs",
        "build:backend": "bun build ./src/server.ts --outdir ./dist --target node --format cjs",
        "build:frontend": "cd frontend && bun install && bun run build",
        "start": "bun dist/server.js",
        "dev": "bunx concurrently -k -n backend,frontend -c blue,green \"bun run dev:backend\" \"bun run dev:frontend\"",
        "dev:backend": "bun --watch src/server.ts",
        "dev:frontend": "cd frontend && bun run dev",
        "format": "bun run prettier --write \"src/**/*.ts\" \"frontend/src/**/*.{svelte,ts}\" \"*.json\" \"drizzle.config.ts\"",
        "lint": "eslint src/**/*.ts",
        "lint:frontend": "cd frontend && bun run check",
        "lint:fix": "eslint src/**/*.ts --fix",
        "test": "NODE_ENV=test bun test src",
        "test:e2e": "bun --env-file=.env run playwright-test",
        "test:e2e:ui": "bun --env-file=.env run playwright-test-ui",
        "test:e2e:debug": "bun --env-file=.env run playwright-test-debug",
        "playwright-test": "NODE_ENV=test bunx playwright test",
        "playwright-test-ui": "NODE_ENV=test bunx playwright test --ui",
        "playwright-test-debug": "NODE_ENV=test bunx playwright test --debug",
        "db:generate": "bun run drizzle-kit generate",
        "db:migrate": "bun run drizzle-kit migrate",
        "db:studio": "bun run drizzle-kit studio"
    },
    "dependencies": {
        "@aws-sdk/client-bedrock": "^3.984.0",
        "@aws-sdk/client-bedrock-runtime": "^3.984.0",
        "@openrouter/sdk": "^0.3.16",
        "cors": "^2.8.6",
        "drizzle-orm": "^0.45.1",
        "express": "^5.2.1",
        "fast-deep-equal": "^3.1.3",
        "joi": "^18.0.2",
        "openai": "^6.18.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@playwright/test": "^1.58.1",
        "@types/bun": "^1.3.8",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/joi": "^17.2.3",
        "@types/node": "^25.2.1",
        "better-sqlite3": "^12.6.2",
        "concurrently": "^9.2.1",
        "drizzle-kit": "^0.31.8",
        "eslint": "^9.39.2",
        "prettier": "^3.8.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.54.0"
    }
}
