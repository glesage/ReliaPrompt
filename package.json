{
    "name": "relia-prompt",
    "version": "1.0.0",
    "description": "Tool for testing llm prompts against multiple LLMs and improving them.",
    "type": "module",
    "main": "dist/server.cjs",
    "exports": {
        ".": {
            "types": "./dist/src/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        },
        "./server": {
            "types": "./dist/src/server.d.ts",
            "default": "./dist/server.cjs"
        }
    },
    "files": [
        "dist",
        "shared"
    ],
    "scripts": {
        "build": "bun run build:dashboard && bun run build:backend && bun run build:lib",
        "build:lib": "bun build ./src/index.ts --outfile ./dist/index.cjs --target node --format cjs && bun build ./src/index.ts --outfile ./dist/index.js --target node --format esm && tsc -p tsconfig.lib.json",
        "build:backend": "bun build ./src/server.ts --outfile ./dist/server.cjs --target node --format cjs",
        "build:dashboard": "cd dashboard && bun install && bun run build",
        "start": "bun dist/server.cjs",
        "dev": "bunx concurrently -k -n backend,dashboard -c blue,green \"bun run dev:backend\" \"bun run dev:dashboard\"",
        "dev:backend": "bun --watch src/server.ts",
        "dev:dashboard": "cd dashboard && bun run dev",
        "format": "bun run prettier --write \"src/**/*.ts\" \"dashboard/src/**/*.{svelte,ts}\" \"*.json\"",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "test": "NODE_ENV=test bun test src",
        "test:e2e": "bun --env-file=.env run playwright-test",
        "test:e2e:ui": "bun --env-file=.env run playwright-test-ui",
        "test:e2e:debug": "bun --env-file=.env run playwright-test-debug",
        "playwright-test": "cd dashboard && NODE_ENV=test bunx playwright test",
        "playwright-test-ui": "cd dashboard && NODE_ENV=test bunx playwright test --ui",
        "playwright-test-debug": "cd dashboard && NODE_ENV=test bunx playwright test --debug",
        "reliaprompt:ui": "NODE_ENV=development bun run src/cli-ui.ts"
    },
    "dependencies": {
        "@aws-sdk/client-bedrock": "^3.984.0",
        "@aws-sdk/client-bedrock-runtime": "^3.984.0",
        "@openrouter/sdk": "^0.3.16",
        "fast-deep-equal": "^3.1.3",
        "openai": "^6.18.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@playwright/test": "^1.58.1",
        "@types/bun": "^1.3.8",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/node": "^25.2.1",
        "concurrently": "^9.2.1",
        "cors": "^2.8.6",
        "eslint": "^9.39.2",
        "express": "^5.2.1",
        "prettier": "^3.8.1",
        "prettier-plugin-svelte": "^3.3.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.54.0"
    }
}
